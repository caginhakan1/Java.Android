<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/editTextMessage" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:hint="Mesaj覺n覺z覺 yaz覺n"/>
        <ImageButton android:id="@+id/buttonSend" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_send"/>
    </LinearLayout>
</LinearLayout>